<body>
<h3>STANDINGS PAGE</h3>
<h3>Eastern Conference</h3>
<table class="standingsTable">
    <thead>
        <th>Confernece Rank</th>
        <th>Team</th>
        <th>Wins</th>
        <th>Losses</th>
        <th>Games Behind</th>
        <th>Points For</th>
        <th>Points Against</th>
        <th>Streak</th>
    </thead>
    <tbody>
    <% for(let i=0; i< ec_full.length; i++){ %>
        <tr>
            <td><%=[i + 1]%></td>
            <td><a class="teamPageLinkStandings" href="<%=`/teamPage/${ec_full[i].market} ${ec_full[i].name}`%>"><%= ec_full[i].market %> <%= ec_full[i].name %></a></td>
            <td><%= ec_full[i].wins %></td>
            <td><%= ec_full[i].losses %></td>
            <td><%= ec_full[i].games_behind.conference %></td>
            <td><%= ec_full[i].points_for %></td>
            <td><%= ec_full[i].points_against %></td>
            <td><%= ec_full[i].streak.kind %><%= ec_full[i].streak.length %></td>
        </tr>
        <% } %>
    </tbody>
</table>
